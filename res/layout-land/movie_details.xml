<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/movieDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:visibility="invisible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/large_padding"
                    android:background="#aa000000" />

                <FrameLayout
                    android:id="@+id/coverLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/movie_details_padding" >

                    <com.miz.functions.AspectRatioImageViewCover
                        android:id="@+id/traktIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/movie_details_padding"
                        android:adjustViewBounds="false"
                        android:background="@drawable/border"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/loading_image" />

                    <com.miz.functions.AspectRatioImageViewCover
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/movie_details_padding"
                        android:background="@drawable/buttonstyle"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="center"
                        android:src="@drawable/ic_video_play" />
                </FrameLayout>

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignTop="@+id/imageView3"
                    android:layout_marginBottom="@dimen/movie_details_padding"
                    android:layout_marginLeft="@dimen/movie_details_padding"
                    android:layout_marginRight="@dimen/movie_details_padding"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/coverLayout" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/movieTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/movie_details_padding"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:shadowColor="#000000"
                            android:shadowDx="1.0"
                            android:shadowDy="1.0"
                            android:shadowRadius="1.0"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textIsSelectable="false"
                            android:textSize="@dimen/large_text_headline_details" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#ddd"
                            android:textIsSelectable="false"
                            android:textSize="@dimen/details_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#ddd"
                            android:textIsSelectable="false"
                            android:textSize="@dimen/details_text_size" />

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:focusable="false"
                            android:stretchColumns="*" >

                            <TableRow
                                android:id="@+id/tableRow1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false" >

                                <TextView
                                    android:id="@+id/TextView01"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="0"
                                    android:focusable="false"
                                    android:text="@string/detailsRunTime"
                                    android:textAllCaps="true"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="@dimen/details_text_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:focusable="false"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#ddd"
                                    android:textIsSelectable="true"
                                    android:textSize="@dimen/details_text_size" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/TableRow01"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false" >

                                <TextView
                                    android:id="@+id/TextView05"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="0"
                                    android:focusable="false"
                                    android:text="@string/detailsReleaseDate"
                                    android:textAllCaps="true"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="@dimen/details_text_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textReleaseDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:focusable="false"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#ddd"
                                    android:textIsSelectable="true"
                                    android:textSize="@dimen/details_text_size" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/tableRow2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false" >

                                <TextView
                                    android:id="@+id/row_title_movies_online"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="0"
                                    android:focusable="false"
                                    android:text="@string/detailsCertification"
                                    android:textAllCaps="true"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="@dimen/details_text_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView11"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:focusable="false"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#ddd"
                                    android:textIsSelectable="true"
                                    android:textSize="@dimen/details_text_size" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/tableRow5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false" >

                                <TextView
                                    android:id="@+id/TextView04"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="0"
                                    android:focusable="false"
                                    android:text="@string/detailsRating"
                                    android:textAllCaps="true"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="@dimen/details_text_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView12"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:focusable="false"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#ddd"
                                    android:textIsSelectable="true"
                                    android:textSize="@dimen/details_text_size" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/tableRow3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false" >

                                <TextView
                                    android:id="@+id/TextView03"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="0"
                                    android:focusable="false"
                                    android:text="@string/choiceGenres"
                                    android:textAllCaps="true"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="@dimen/details_text_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:focusable="false"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#ddd"
                                    android:textIsSelectable="true"
                                    android:textSize="@dimen/details_text_size" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/tableRow4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false" >

                                <TextView
                                    android:id="@+id/TextView06"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="0"
                                    android:focusable="false"
                                    android:text="@string/detailsFile"
                                    android:textAllCaps="true"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="@dimen/details_text_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:focusable="false"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#ddd"
                                    android:textIsSelectable="true"
                                    android:textSize="@dimen/details_text_size" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>