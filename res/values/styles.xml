<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Mizuu.Theme.NoBackGround" parent="@style/Mizuu.Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Mizuu.Theme.NoBackGround.FullScreen" parent="@style/Mizuu.Theme.NoBackGround">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Mizuu.Theme.NoBackGround.Transparent" parent="@style/Mizuu.Theme.NoBackGround">
        <item name="android:actionBarStyle">@style/ActionBar.Transparent</item>
    </style>

    <style name="Mizuu.Theme.Transparent.NoBackGround.FullScreen" parent="@style/Mizuu.Theme.NoBackGround.Transparent">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Mizuu.Theme.Transparent" parent="@style/Mizuu.Theme">
        <item name="android:actionBarStyle">@style/ActionBar.Transparent</item>
    </style>

    <style name="Mizuu.Theme.Transparent.FullScreen" parent="@style/Mizuu.Theme.Transparent">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Mizuu.Theme" parent="@android:style/Theme.Holo">
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_holo_dark</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_holo_dark</item>
    </style>

    <style name="Mizuu.Theme.FullScreen" parent="@style/Mizuu.Theme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CheckBoxAppTheme" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Rounded overflow icon -->
    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow_round</item>
    </style>

    <style name="ActionBar.Solid" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#aa000000</item>
        <item name="android:titleTextStyle">@style/ActionBar.Title</item>
        <item name="android:subtitleTextStyle">@style/ActionBar.Subtitle</item>
    </style>

    <style name="ActionBar.Transparent" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:titleTextStyle">@style/ActionBar.Title</item>
        <item name="android:subtitleTextStyle">@style/ActionBar.Subtitle</item>
    </style>

    <style name="ActionBar.Title" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="ActionBar.Subtitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">#ddd</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="MenuHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#999999</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/accent_bottom_border_grey</item>
    </style>

    <style name="DrawerListHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#585858</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:background">@drawable/accent_bottom_border_grey</item>
    </style>

    <!-- Theme for cancel library update dialog and such -->
    <style name="Mizuu.Theme.Transparent.Dialog" parent="android:Theme.Holo">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>