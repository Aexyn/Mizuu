<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Mizuu.Theme.Preference" parent="android:Theme.Material">
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:colorPrimary">#3f51b5</item>
        <item name="android:colorAccent">#fff</item>
        <item name="android:colorPrimaryDark">#1a237e</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorControlNormal">#fff</item>
        <item name="android:colorControlActivated">#fff</item>
        <item name="android:colorControlHighlight">#fff</item>
    </style>

    <style name="Button.RightAligned" parent="android:style/Widget.Material.Button" >
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_gravity">right</item>
    </style>

</resources>