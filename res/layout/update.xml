<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >

        <TextView
            android:id="@+id/TextView01"
            style="@style/MenuHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/options" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/updateCheckBox" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringRemoveUnavailableEntries" />

        <TextView
            android:id="@+id/row_title_movies_online"
            style="@style/MenuHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/fileSources" />

        <TextView
            android:id="@+id/overviewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/prefsFileSourcesDescription"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/traktLogIn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_action_list_2"
            android:onClick="selectSources"
            android:text="@string/txtSelectFileSources" />

        <TextView
            android:id="@+id/TextView03"
            style="@style/MenuHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/menuUpdateTitle" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/updateThirdStepDescription"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/btNewUserStartSearch"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/refresh"
            android:onClick="startUpdate"
            android:text="@string/newuser_btStartSearch" >
        </Button>
    </LinearLayout>

</ScrollView>