<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.miz.views.ObservableScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" >

        <LinearLayout
            android:id="@+id/movieDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.miz.views.PanningView
                android:id="@+id/episodePhoto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/backdrop_portrait_height"
                android:src="@drawable/bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/movieTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/details_padding"
                    android:layout_marginRight="@dimen/details_padding"
                    android:layout_marginTop="@dimen/details_padding"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:shadowColor="#000"
                    android:shadowDx="1.0"
                    android:shadowDy="1.0"
                    android:shadowRadius="1.0"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#f0f0f0"
                    android:textSize="@dimen/details_large_font_size" />
                
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/details_padding"
                    android:layout_marginRight="@dimen/details_padding"
                    android:shadowColor="#000"
                    android:shadowDx="1.0"
                    android:shadowDy="1.0"
                    android:shadowRadius="1.0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#f0f0f0"
                    android:textSize="@dimen/details_medium_font_size" />

                <LinearLayout
                    android:id="@+id/details_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/details_medium_padding"
                    android:layout_marginTop="@dimen/details_padding"
                    android:background="#666"
                    android:baselineAligned="false"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/details_between_padding"
                    android:paddingLeft="@dimen/details_large_padding"
                    android:paddingRight="@dimen/details_medium_padding"
                    android:paddingTop="@dimen/details_between_padding" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/TextView03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:maxLines="1"
                            android:text="@string/detailsAirDate"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="@dimen/details_area_header" />

                        <TextView
                            android:id="@+id/textReleaseDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:maxLines="1"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="@dimen/details_medium_font_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView61"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:maxLines="1"
                            android:text="@string/detailsRating"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="@dimen/details_area_header" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:maxLines="1"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="@dimen/details_medium_font_size" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/details_medium_padding"
                    android:layout_marginLeft="@dimen/details_large_padding"
                    android:layout_marginRight="@dimen/details_medium_padding"
                    android:focusable="false"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#f0f0f0"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/details_description_font_size" />

                <TextView
                    android:id="@+id/director"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/details_medium_padding"
                    android:layout_marginLeft="@dimen/details_large_padding"
                    android:layout_marginRight="@dimen/details_medium_padding"
                    android:drawableLeft="@drawable/director"
                    android:drawablePadding="@dimen/movie_details_padding"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#f0f0f0"
                    android:textSize="@dimen/details_description_font_size" />

                <TextView
                    android:id="@+id/writer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/details_medium_padding"
                    android:layout_marginLeft="@dimen/details_large_padding"
                    android:layout_marginRight="@dimen/details_medium_padding"
                    android:drawableLeft="@drawable/ic_action_edit"
                    android:drawablePadding="@dimen/movie_details_padding"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#f0f0f0"
                    android:textSize="@dimen/details_description_font_size" />

                <TextView
                    android:id="@+id/guest_stars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/details_medium_padding"
                    android:layout_marginLeft="@dimen/details_large_padding"
                    android:layout_marginRight="@dimen/details_medium_padding"
                    android:drawableLeft="@drawable/ic_action_users"
                    android:drawablePadding="@dimen/movie_details_padding"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#f0f0f0"
                    android:textSize="@dimen/details_description_font_size" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/details_medium_padding"
                    android:layout_marginLeft="@dimen/details_large_padding"
                    android:layout_marginRight="@dimen/details_medium_padding"
                    android:drawableLeft="@drawable/file"
                    android:drawablePadding="@dimen/movie_details_padding"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#f0f0f0"
                    android:textSize="@dimen/details_description_font_size" />
            </LinearLayout>
        </LinearLayout>
    </com.miz.views.ObservableScrollView>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>