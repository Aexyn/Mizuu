<com.miz.views.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/episode_details_small_margin" >

        <FrameLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/traktIcon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/backdrop_portrait_height"
                android:background="@drawable/border"
                android:scaleType="centerCrop"
                android:src="@drawable/noactor" />
        </FrameLayout>

        <TextView
            android:id="@+id/actor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingLeft="@dimen/episode_details_small_margin"
            android:paddingRight="@dimen/episode_details_small_margin"
            android:paddingTop="@dimen/episode_details_small_margin"
            android:textColor="#fff"
            android:textIsSelectable="true"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="regular"
            android:paddingLeft="@dimen/episode_details_small_margin"
            android:paddingRight="@dimen/episode_details_small_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textIsSelectable="true"
            android:textSize="@dimen/tagline_text_size"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="regular"
            android:paddingLeft="@dimen/episode_details_small_margin"
            android:paddingRight="@dimen/episode_details_small_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textIsSelectable="true"
            android:textSize="@dimen/tagline_text_size"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="@dimen/episode_details_small_margin"
            android:paddingRight="@dimen/episode_details_small_margin"
            android:paddingTop="@dimen/episode_details_small_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textIsSelectable="true"
            android:textSize="@dimen/details_text_size" />
    </LinearLayout>

</com.miz.views.ObservableScrollView>