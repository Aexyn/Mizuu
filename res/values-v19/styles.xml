<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- It needs to be in a v19 resource folder as it's causing a crash on 4.1 devices if it's not -->
    <style name="Mizuu.Theme.NoBackGround" parent="@style/Mizuu.Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    
    <style name="Mizuu.Theme.Translucent" parent="@style/Mizuu.Theme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Mizuu.Theme.Translucent.FullScreen" parent="@style/Mizuu.Theme.Translucent">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>